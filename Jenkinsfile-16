pipeline {

    tools{

        maven 'maven3.9.6'
    }
    agent any

    environment {
        registry = "https://hub.docker.com/repository/docker/jeff510/jenkins-project/general"
    }
    stages {
        stage('Checkout') {
            steps {
            checkout scmGit(branches: [[name: '*/jk']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Geofrey498/nextcloud-application-docker-pipeline.git']])            }
        }
        
        stage ("Build Image") {
            steps {
                script {
                    dockerImage = docker.build registry
                    dockerImage.tag("$BUILD_NUMBER")
                }
            }
        }
        
        stage ("Push to Dockerhub") {
            steps {
                script {
                    sh 'docker push https://hub.docker.com/repository/docker/jeff510/jenkins-project/general:$BUILD_NUMBER'
                    
                }
            }
        }    
    }
}